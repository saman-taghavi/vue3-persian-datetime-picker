{
  "name": "pateh-picker",
  "description": "A vue plugin to select jalali date and time based on vue3-pateh-datetime-picker by Mohammad Talkhabi",
  "version": "0.0.1",
  "author": "saman-taghavi",
  "license": "MIT",
  "main": "dist/vue3-persian-datetime-picker.common.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "vue3 datepicker",
    "persian datepicker",
    "jalali datepicker",
    "shamsi datepicker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saman-taghavi/vue3-persian-datetime-picker"
  },
  "files": [
    "src",
    "dist/*.js",
    "index.d.ts" 
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "buildAll": "npm run export-common & npm run export-umd",
    "export-common": "vue-cli-service build --target lib --name Vue3PersianDatetimePicker --filename vue3-persian-datetime-picker src/picker/Vue3PersianDatetimePicker.vue --formats commonjs --no-clean",
    "export-umd": "vue-cli-service build --target lib --name Vue3PersianDatetimePicker --filename vue3-persian-datetime-picker src/picker/Vue3PersianDatetimePicker.vue --formats umd,umd-min --no-clean"
  },
  "dependencies": {
    "moment-jalaali": "^0.9.6"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.19",
    "@vue/cli-plugin-eslint": "^4.5.19",
    "@vue/cli-plugin-router": "^4.5.19",
    "@vue/cli-service": "^4.5.19",
    "@vue/compiler-sfc": "^3.5.12",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.39.0",
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-vue": "^7.20.0",
    "prettier": "^1.19.1",
    "sass": "^1.80.7",
    "sass-loader": "^8.0.2",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "plugin:vue/vue3-strongly-recommended",
      "plugin:vue/vue3-recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/html-self-closing": [
        "warn",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "tabWidth": 2
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
